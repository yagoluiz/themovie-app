<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheMovie.Views.UpcomingMovieDetailsPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <Frame Padding="0">
                    <StackLayout Orientation="Vertical">
                        <Image Source="{Binding UpcomingMovie.PosterPathUrl}"
                        Aspect="AspectFill"/>
                        <Label Text="{Binding UpcomingMovie.Title}"
						Margin="20, 10, 20, 0"
						FontAttributes="Bold" 
                        FontSize="Medium" />
                        <Label Text="{Binding UpcomingMovie.Genres}"
					    Margin="20, 10, 20, 0"
                        TextColor="Silver"
                        FontSize="Medium" />
                        <Label Text="{Binding UpcomingMovie.ReleaseDate}"
                        Margin="20, 5, 20, 15"
					    FontAttributes="Bold" 
                        FontSize="Medium" />
                        <Label Text="{Binding UpcomingMovie.Overview}"
                        Margin="20, 5, 20, 15"
					    FontAttributes="Bold" 
                        FontSize="Medium" />
                    </StackLayout>
                </Frame>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>