<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Colors -->
  <color name="colorHighlight">#d3d3d3</color>

  <!-- Styles -->
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#d3d3d3</item>
  </style>

  <!-- Override Theme -->
  <style name="MainTheme" parent="MainTheme.Base">
    <item name="android:colorControlHighlight">@color/colorHighlight</item>
    <item name="android:colorActivatedHighlight">@color/colorHighlight</item>
    <item name="android:colorPressedHighlight">@color/colorHighlight</item>
    <item name="android:colorLongPressedHighlight">@color/colorHighlight</item>
    <item name="android:colorFocusedHighlight">@color/colorHighlight</item>
  </style>

  <!-- Splash Screen -->
  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@mipmap/splashscreen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#27ae60</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#444445</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#27ae60</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>
    <item name="colorControlNormal">#27ae60</item>
    <item name="colorControlActivated">#27ae60</item>
    <item name="colorSwitchThumbNormal">#27ae60</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>
</resources>
